<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.MainController"
      spacing="20"
      alignment="TOP_CENTER"
      prefWidth="1000" prefHeight="700"> <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
</padding>

    <Label fx:id="welcomeLabel"/>

    <HBox spacing="30" alignment="CENTER" VBox.vgrow="ALWAYS">

        <VBox spacing="10" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="Lista Rate" style="-fx-font-weight: bold"/>

            <TableView fx:id="duckTableView" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumn" text="ID"/>
                    <TableColumn fx:id="usernameColumn" text="Username"/>
                    <TableColumn fx:id="emailColumn" text="Email"/>
                    <TableColumn fx:id="typeColumn" text="Type"/>
                    <TableColumn fx:id="rezistentaColumn" text="Stamina"/>
                    <TableColumn fx:id="vitezaColumn" text="Speed"/>
                </columns>
            </TableView>

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="prevDuckBtn" text="Previous"/>
                <Button fx:id="nextDuckBtn" text="Next"/>
            </HBox>
        </VBox>

        <VBox spacing="10" HBox.hgrow="ALWAYS" alignment="CENTER">
            <Label text="Lista Persoane" style="-fx-font-weight: bold"/>

            <TableView fx:id="persoanaTableView" VBox.vgrow="ALWAYS">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <columns>
                    <TableColumn fx:id="idColumnPersoana" text="ID"/>
                    <TableColumn fx:id="usernameColumnPersoana" text="Username"/>
                    <TableColumn fx:id="emailColumnPersoana" text="Email"/>
                    <TableColumn fx:id="numeColumn" text="Nume"/>
                    <TableColumn fx:id="prenumeColumn" text="Prenume"/>
                    <TableColumn fx:id="ocupatieColumn" text="Ocupatie"/>
                    <TableColumn fx:id="dataNastereColumn" text="Data Nastere"/>
                </columns>
            </TableView>

            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="prevPersonBtn" text="Previous"/>
                <Button fx:id="nextPersonBtn" text="Next"/>
            </HBox>
        </VBox>

    </HBox>

    <ComboBox fx:id="typeComboBox" prefWidth="200" promptText="Alege tipul..."/>

</VBox>