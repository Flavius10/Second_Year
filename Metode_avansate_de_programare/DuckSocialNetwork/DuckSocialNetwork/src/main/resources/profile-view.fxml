<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.controller.ProfileController"
           style="-fx-background-color: #f0f2f5;">

    <VBox alignment="TOP_CENTER" spacing="10" maxWidth="450" maxHeight="550"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">

        <padding>
            <Insets top="30" right="20" bottom="30" left="20"/>
        </padding>

        <ImageView fx:id="profileImageView" fitWidth="120" fitHeight="120" preserveRatio="true">
        </ImageView>

        <Label fx:id="usernameLabel" text="Nume Utilizator"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #1c1e21;"/>

        <Label fx:id="typeLabel" text="Type"
               style="-fx-font-size: 12px; -fx-padding: 5 15; -fx-background-radius: 15; -fx-font-weight: bold;"/>

        <Separator prefWidth="200" style="-fx-opacity: 0.5; -fx-padding: 10 0;"/>

        <VBox alignment="CENTER" spacing="0">
            <Label text="Prieteni" style="-fx-text-fill: #65676b; -fx-font-size: 14px;"/>
            <Label fx:id="friendsCountLabel" text="0"
                   style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #1877f2;"/>
        </VBox>

        <Region VBox.vgrow="ALWAYS"/> <HBox alignment="CENTER" spacing="5">
        <Label fx:id="emailLabel" text="email@example.com" style="-fx-text-fill: #65676b; -fx-font-size: 13px;"/>
    </HBox>

        <Button text="ðŸ”™" onAction="#backToMainView"
                style="-fx-background-color: #e4e6eb; -fx-text-fill: #050505; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8px; -fx-cursor: hand; -fx-padding: 10 20; -fx-border-color: #ccc; -fx-border-width: 1; -fx-border-radius: 8px;"/>

    </VBox>
</StackPane>