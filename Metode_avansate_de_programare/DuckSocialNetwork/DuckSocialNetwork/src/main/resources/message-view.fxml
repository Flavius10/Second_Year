<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.MessageController"
      prefHeight="500.0" prefWidth="750.0" spacing="15">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <VBox spacing="5" HBox.hgrow="ALWAYS">
        <Label text="Chat Room" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

        <TextArea fx:id="resultArea" VBox.vgrow="ALWAYS" editable="false" wrapText="true" style="-fx-font-family: 'Consolas'; -fx-font-size: 12px;"/>

        <Label fx:id="typingLabel" text="" textFill="#888888" style="-fx-font-style: italic;"/>
    </VBox>

    <Separator orientation="VERTICAL"/>

    <VBox spacing="10" minWidth="280" alignment="TOP_CENTER">
        <Label text="Trimite Mesaj" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
        <Separator/>

        <GridPane vgap="10" hgap="5">
            <columnConstraints>
                <ColumnConstraints minWidth="70" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Catre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="namesComboBox" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Reply ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="idMessageField" text="0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Mesaj:" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
            <TextArea fx:id="messageArea" prefRowCount="4" wrapText="true" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Trimite" fx:id="sendMessageBtn" defaultButton="true" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand;"/>
            <Button text="Send All" fx:id="sendToAllBtn" style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-cursor: hand;"/>
        </HBox>

        <Region VBox.vgrow="ALWAYS"/> <Button text="Inapoi la Meniu" onAction="#sendBackToMainPage" maxWidth="Infinity"/>
    </VBox>
</HBox>