<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.PersoanaController"
      prefHeight="400" prefWidth="720">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label fx:id="welcomeLabel"/>

    <VBox spacing="10" HBox.hgrow="ALWAYS" alignment="CENTER">
        <Label text="Lista Persoane" style="-fx-font-weight: bold"/>
        <TableView fx:id="persoanaTableView" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="40"/>
                <TableColumn fx:id="usernameColumn" text="Username"/>
                <TableColumn fx:id="emailColumn" text="Email"/>
                <TableColumn fx:id="numeColumn" text="Nume"/>
                <TableColumn fx:id="prenumeColumn" text="Prenume"/>
                <TableColumn fx:id="ocupatieColumn" text="Ocupatie"/>
                <TableColumn fx:id="dataNastereColumn" text="Data Nastere"/>
            </columns>
        </TableView>
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="prevPersoanaBtn" text="Previous"/>
            <Button fx:id="nextPersoanaBtn" text="Next"/>
        </HBox>
    </VBox>

    <Separator/>

    <VBox spacing="10" HBox.hgrow="NEVER" prefWidth="350">
        <Label text="Create Person" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

        <Separator/>

        <GridPane vgap="10" hgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="80" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Name :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="numeField" maxWidth="Infinity" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <Label text="Prenume:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="prenumeField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            <Label text="Ocupatia:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="ocupatieField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

            <Label text="Data Nastere:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        </GridPane>

        <Separator/>

        <HBox spacing="10">

            <VBox>
                <Button text="Add Persoana" fx:id="addPersoanaBtn" maxWidth="Infinity" HBox.hgrow="ALWAYS" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                <Button text="Delete Persoana" fx:id="deletePersoanaBtn" maxWidth="Infinity" HBox.hgrow="ALWAYS" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
            </VBox>
            <Button text="Back to main page" onAction="#switchToMainTab"/>
        </HBox>

        <TextArea fx:id="resultArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS"/>

    </VBox>


</HBox>
